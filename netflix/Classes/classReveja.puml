    + void setNome(String nome)
    + void setClassificacaoEtaria(Int classificacaoEtaria)
    + Secao navegarParaLembrete(Lembrete lembrete)
}


class Lembrete {
    - colecaoMidiasAssistidas: HashMap<Integer, Midia>()
    + HashMap<Integer, Midia> gerarNotificacoesMidias(HashMap<Integer, Midia> colecaoMidiasAssistidas)
}

